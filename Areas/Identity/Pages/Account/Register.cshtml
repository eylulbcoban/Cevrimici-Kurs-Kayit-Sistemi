@page
@model Eylul_Webproje.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <section>
            <h1 class="mb-3 text-center">@ViewData["Title"]</h1>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>

                <!-- Kullanıcı tipi seçimi -->
                <div class="mb-4 text-center">
                    <label class="form-label d-block mb-2">Hesap tipi</label>

                    <div class="btn-group" role="group" aria-label="User role">
                        <input type="radio" class="btn-check" asp-for="Input.Role" value="Student" id="roleStudent" checked>
                        <label class="btn btn-outline-primary" for="roleStudent">Öğrenci</label>

                        <input type="radio" class="btn-check" asp-for="Input.Role" value="Instructor" id="roleInstructor">
                        <label class="btn btn-outline-primary" for="roleInstructor">Eğitmen</label>

                        <input type="radio" class="btn-check" asp-for="Input.Role" value="Admin" id="roleAdmin">
                        <label class="btn btn-outline-primary" for="roleAdmin">Admin</label>
                    </div>

                    <span asp-validation-for="Input.Role" class="text-danger d-block mt-2"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.Email"
                           class="form-control auth-input"
                           autocomplete="username"
                           aria-required="true"
                           placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.Password"
                           class="form-control auth-input"
                           autocomplete="new-password"
                           aria-required="true"
                           placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.ConfirmPassword"
                           class="form-control auth-input"
                           autocomplete="new-password"
                           aria-required="true"
                           placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
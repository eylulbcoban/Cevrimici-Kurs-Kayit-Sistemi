@page
@model Eylul_Webproje.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <section>
            <h1 class="mb-3 text-center">@ViewData["Title"]</h1>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>

                <!-- Kullanıcı tipi seçimi -->
                <div class="mb-4 text-center">
                    <label class="form-label d-block mb-2">Hesap tipi</label>

                    <div class="btn-group" role="group" aria-label="User role">
                        <input type="radio" class="btn-check" asp-for="Input.Role" value="Student" id="loginRoleStudent" checked>
                        <label class="btn btn-outline-primary" for="loginRoleStudent">Öğrenci</label>

                        <input type="radio" class="btn-check" asp-for="Input.Role" value="Instructor" id="loginRoleInstructor">
                        <label class="btn btn-outline-primary" for="loginRoleInstructor">Eğitmen</label>

                        <input type="radio" class="btn-check" asp-for="Input.Role" value="Admin" id="loginRoleAdmin">
                        <label class="btn btn-outline-primary" for="loginRoleAdmin">Admin</label>
                    </div>

                    <span asp-validation-for="Input.Role" class="text-danger d-block mt-2"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.Email"
                           class="form-control auth-input"
                           autocomplete="username"
                           aria-required="true"
                           placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.Password"
                           class="form-control auth-input"
                           autocomplete="current-password"
                           aria-required="true"
                           placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox mb-4 mt-2">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
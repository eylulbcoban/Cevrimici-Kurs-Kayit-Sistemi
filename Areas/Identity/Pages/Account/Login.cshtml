@page
@model Eylul_Webproje.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-page-center">
    <div class="login-container">

        <h2>Login</h2>

        <form method="post" id="account">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- ROLE SELECTION -->
            <div class="role-selection">
                <label class="role-label">
                    <input type="radio" asp-for="Input.Role" value="Student" checked>
                    Öğrenci
                    <span class="underline"></span>
                </label>

                <label class="role-label">
                    <input type="radio" asp-for="Input.Role" value="Instructor">
                    Eğitmen
                    <span class="underline"></span>
                </label>

                <label class="role-label">
                    <input type="radio" asp-for="Input.Role" value="Admin">
                    Admin
                    <span class="underline"></span>
                </label>
            </div>

            <!-- EMAIL -->
            <label class="input-label">Email *</label>
            <input asp-for="Input.Email"
                   class="input-box"
                   autocomplete="username"
                   placeholder="Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            <!-- PASSWORD -->
            <label class="input-label" style="margin-top:15px;">Password *</label>
            <input asp-for="Input.Password"
                   class="input-box"
                   autocomplete="current-password"
                   placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <!-- REMEMBER ME -->
            <div class="mt-3 mb-2">
                <label style="color:white; font-size:14px;">
                    <input asp-for="Input.RememberMe" />
                    Remember me?
                </label>
            </div>

            <!-- BUTTON -->
            <button type="submit" class="login-btn">
                Sign In <span>➜</span>
            </button>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

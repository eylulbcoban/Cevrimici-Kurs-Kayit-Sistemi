@model List<Eylul_Webproje.Models.Course>

@{
    ViewData["Title"] = "Kurslarım";
}

<h2 class="text-light mb-4">Kurslarım</h2>

<a asp-action="CreateCourse" class="btn btn-danger mb-4">Yeni Kurs Ekle</a>

<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card course-card shadow-lg">

                <div class="card-body">
                    <h4 class="card-title text-light">@course.Title</h4>
                    <p class="card-text text-secondary">@course.Category</p>

                    <div class="mt-3">
                        <a asp-action="AddModule" asp-route-courseId="@course.Id"
                           class="btn btn-outline-info btn-sm">Modül Ekle</a>

                        <a asp-action="CourseStudents" asp-route-courseId="@course.Id"
                           class="btn btn-outline-warning btn-sm ms-2">Öğrencileri Gör</a>
                    </div>
                </div>

            </div>
        </div>
    }
</div>

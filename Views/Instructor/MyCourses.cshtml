@model List<Eylul_Webproje.Models.Course>

<h2>Kurslarım</h2>

<p><a asp-action="CreateCourse">Yeni Kurs Ekle</a></p>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>İşlemler</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Category</td>
                <td>
                    <a asp-action="AddModule" asp-route-courseId="@course.Id">Modül Ekle</a> |
                    <a asp-action="CourseStudents" asp-route-courseId="@course.Id">Öğrencileri Gör</a>
                </td>
            </tr>
        }
    </tbody>
</table>

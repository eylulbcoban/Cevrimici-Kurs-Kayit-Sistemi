@model List<Eylul_Webproje.Models.Course>

<h2 class="page-title">📚 Kurslarım</h2>

@if (!Model.Any())
{
    <!-- 👇 BURAYA -->
    <div class="empty-state text-center mt-5">
        <h4>📭 Henüz hiç kursun yok</h4>
        <p>İlk kursunu oluşturarak öğrencilerle buluş</p>

        <a asp-action="CreateCourse" class="btn btn-primary mt-3">
            ➕ Yeni Kurs Oluştur
        </a>
    </div>
}
else
{
    <!-- 👇 KURSLAR VARSA -->
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="course-card">

                    <img src="https://picsum.photos/600/400?random=@course.Id"
                         class="course-img" />

                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="course-description">@course.Description</p>

                        <div class="course-buttons">
                            <a asp-action="AddModule"
                               asp-route-courseId="@course.Id"
                               class="btn btn-outline-info btn-sm">
                                ➕ Modül Ekle
                            </a>
                        </div>
                        <a asp-action="CourseStudents"
                           asp-route-courseId="@course.Id"
                           class="btn btn-outline-warning btn-sm">
                            👥 Öğrencileri Gör
                        </a>
                    </div>

                </div>
            </div>
        }
    </div>
}

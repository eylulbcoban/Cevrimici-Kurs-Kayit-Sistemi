@using Eylul_Webproje.Models
@model List<Course>

<h2 class="page-title">🎯 Kurslarım</h2>

@if (!Model.Any())
{
    <div class="empty-state text-center mt-5">
        <h4>📭 Henüz hiç kursun yok</h4>
        <p>İlk kursunu oluşturarak öğrencilerle buluş</p>

        <a asp-action="CreateCourse" class="btn btn-primary mt-3">
            ➕ Yeni Kurs Oluştur
        </a>
    </div>
}
else
{
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="course-card">

                    <img src="https://picsum.photos/600/400?random=@course.Id"
                         class="course-img" />

                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="course-description">@course.Description</p>

                        <!-- 1️⃣ DÜZENLE -->
                        <a asp-action="EditCourse"
                           asp-route-id="@course.Id"
                           class="btn btn-outline-primary w-100 mb-2">
                            ✏️ Düzenle
                        </a>

                        <!-- 2️⃣ MODÜL + ÖĞRENCİ -->
                        <div class="d-flex gap-2 mb-2">
                            <a asp-action="AddModule"
                               asp-route-courseId="@course.Id"
                               class="btn btn-outline-success w-50">
                                ➕ Modül
                            </a>

                            <a asp-action="CourseStudents"
                               asp-route-courseId="@course.Id"
                               class="btn btn-outline-warning w-50">
                                👥 Öğrenciler
                            </a>
                        </div>

                        <!-- 3️⃣ SİL -->
                        <form asp-action="DeleteCourse"
                              asp-route-id="@course.Id"
                              method="post"
                              onsubmit="return confirm('Bu kursu silmek istediğine emin misin?');">

                            <button type="submit"
                                    class="btn btn-danger w-100">
                                🗑 Kursu Sil
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        }
    </div>
}

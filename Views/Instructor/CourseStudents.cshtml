@model List<Eylul_Webproje.Models.Enrollment>

<h2 class="page-title">👥 Kursa Kayıtlı Öğrenciler</h2>

@if (!Model.Any())
{
    <div class="empty-state text-center mt-5">
        <h4>📭 Henüz öğrenci yok</h4>
        <p>Bu kursa şu an kayıtlı öğrenci bulunmuyor.</p>
    </div>
}
else
{
    <div class="admin-glass-card mt-4">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Öğrenci Adı</th>
                    <th>Email</th>
                    <th>Kayıt Tarihi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.Student.User.UserName</td>
                        <td>@e.Student.User.Email</td>
                        <td>@e.EnrollDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<a asp-action="MyCourses" class="back-link mt-4">
    ⬅ Kurslara Geri Dön
</a>

@using Eylul_Webproje.Models
@model List<Course>

<h2 class="admin-title mb-4">📚 Tüm Kurslar</h2>


<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="admin-course-card">

                <!-- Dinamik Fotoğraf -->
                <img src="https://picsum.photos/600/400?random=@course.Id"
                     class="admin-course-img" />

                <div class="admin-course-body">
                    <h4 class="course-title">@course.Title</h4>

                    <p class="course-description">
                        @course.Description
                    </p>

                    <p class="course-category">
                        <strong>Kategori:</strong> @course.Category
                    </p>

                    <p class="course-instructor">
                        <strong>Eğitmen:</strong> @course.Instructor?.User?.Email
                    </p>

                    <!-- CRUD BUTTONS -->
                    <div class="d-flex gap-2 mt-3 flex-wrap">

                        <!-- READ -->
                        <a asp-action="CourseDetail"
                           asp-route-id="@course.Id"
                           class="btn btn-outline-info btn-sm w-100">
                            👁 Detay
                        </a>

                        <!-- UPDATE -->
                        <a asp-action="EditCourse"
                           asp-route-id="@course.Id"
                           class="btn btn-outline-warning btn-sm w-100">
                            ✏️ Düzenle
                        </a>

                        <!-- DELETE -->
                        <a asp-action="DeleteCourse"
                           asp-route-id="@course.Id"
                           class="btn btn-outline-danger btn-sm w-100"
                           onclick="return confirm('Bu kurs silinsin mi?')">
                            🗑 Sil
                        </a>

                        
                    </div>

                </div>
            </div>
        </div>
    }
</div>

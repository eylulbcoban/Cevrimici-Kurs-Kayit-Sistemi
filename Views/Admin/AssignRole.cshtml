@model Eylul_Webproje.Models.ApplicationUser

@{
    ViewData["Title"] = "Rol Ata";
}

<h2 class="page-title">Kullanıcıya Rol Ata</h2>

<div class="admin-glass-card role-card">
    <p class="text-light mb-3">
        <strong>Kullanıcı:</strong> @Model.Email
    </p>

    <form asp-action="AssignRole" method="post">
        <input type="hidden" name="id" value="@Model.Id" />

        <label class="input-label">Rol Seç</label>
        <select name="role" class="form-select custom-select mb-3">
            @foreach (var role in ViewBag.Roles)
            {
                <option value="@role">@role</option>
            }
        </select>

        <button type="submit" class="btn btn-danger">
            Rolü Ata
        </button>
    </form>
</div>

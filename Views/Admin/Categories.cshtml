@model List<Eylul_Webproje.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<h2 class="page-title">Kategori Listesi</h2>

<a asp-action="CreateCategory" class="btn btn-danger mb-4">
    + Yeni Kategori Ekle
</a>

<div class="admin-glass-card">
    <table class="admin-table">
        <thead>
            <tr>
                <th>Kategori Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="EditCategory" asp-route-id="@category.Id"
                           class="btn btn-outline-info btn-sm">Düzenle</a>

                        <a asp-action="DeleteCategory" asp-route-id="@category.Id"
                           class="btn btn-outline-danger btn-sm ms-2"
                           onclick="return confirm('Silmek istiyor musun?')">
                            Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

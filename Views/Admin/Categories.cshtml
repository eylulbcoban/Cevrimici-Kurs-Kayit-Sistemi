@model List<Eylul_Webproje.Models.Category>

<h2>Kategori Listesi</h2>

<p><a asp-action="CreateCategory">Yeni Kategori Ekle</a></p>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="EditCategory" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-action="DeleteCategory" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>